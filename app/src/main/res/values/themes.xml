<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/circular_std</item>
        <item name="android:textStyle">normal</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Base_CollapsingToolbarLayoutStyle">
        <!--        <item name="android:theme">@style/Base_CollapsingToolbarLayoutTheme</item>-->
        <item name="expandedTitleTextAppearance">@style/CustomExpandedTitleTextAppearance</item>
        <item name="collapsedTitleTextAppearance">@style/CustomCollapsedTitleTextAppearance</item>
        <item name="collapsedTitleGravity">center</item>
    </style>

    <style name="CustomExpandedTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomExpandedIdTextAppearance" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCollapsedTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/circular_std</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Insets" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray_500</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
    </style>

    <style name="HeaderTextAppearance" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_view_evolution_label_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EvolutionItemTextAppearance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PokemonTypePillAppearanceList" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/pokemon_type_pill</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PokemonTypePillAppearanceDetail" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/pokemon_type_pill</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomExtendedFAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/filter_fab_color</item>
        <item name="alpha">1</item>
        <item name="android:fillAlpha">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">1dp</item>
        <item name="iconSize">20dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textAppearance">@style/CustomExtendedFAB.TextAppearance</item>
    </style>

    <style name="CustomExtendedFAB.TextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/circular_std</item>
    </style>
</resources>